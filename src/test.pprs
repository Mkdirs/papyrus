def circle(r:int, w:int, h:int){
   x:int = 0;
   y: int = 0;

   x0:int = w/2;
   y0:int = h/2;

   while(y < h){
      while(x < w){

         dist:int = (x0 - x)^2 + (y0 - y)^2;

         if (dist <= r^2) {
            put(x, y, #ff0000);
         }

         x = x+1;
      }
      x = 0;
      y = y+1;
   }
}


def main(){
   // CrÃ©e un canvas de 100x100
   create_canvas(100, 100);

   // Rempli le canvas par du blanc
   fill(#ffffff);


   sub_w:int = 100/2-1;
   sub_h:int = 100/2-1;

   radius:int = sub_w/2;

   // CrÃ©e un canvas de sub_w x sub_h (50x50)
   // Fusionne ce canvas sur l'ancien aux positions (100/2-sub_w/2, 100/2-sub_h/2) : soit au centre
   subcanvas(100/2-sub_w/2, 100/2-sub_h/2, sub_w, sub_h){
      // On dessine un cercle de rayon radius au milieu du canvas
      circle(radius, sub_w, sub_h);
   }

   // On enregistre le canvas
   save_canvas();
}